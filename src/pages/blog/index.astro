---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="font-sans text-slate-900 bg-white">
		<Header />
		<main class="max-w-[680px] mx-auto px-6 py-12 md:py-16">
			<h1 class="text-3xl md:text-4xl font-bold text-navy-900 tracking-tight mb-8">
				Writing
			</h1>
			<ul class="space-y-0">
				{posts.map((post) => (
					<li class="border-b border-slate-200 last:border-b-0">
						<a
							href={`/blog/${post.id}/`}
							class="block py-5 no-underline group"
						>
							<div class="flex justify-between items-baseline gap-4">
								<h2 class="text-lg font-medium text-slate-900 group-hover:text-accent transition-colors group-hover:underline group-hover:underline-offset-2">
									{post.data.title}
								</h2>
								<span class="text-sm text-slate-500 whitespace-nowrap">
									<FormattedDate date={post.data.pubDate} />
								</span>
							</div>
							<p class="mt-2 text-slate-600 text-[15px] leading-relaxed">
								{post.data.description}
							</p>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>
